<h1 class="center">Genres</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.title %></td>
        <td><%= link_to 'Afficher', genre, class: "btn blue waves-effect waves-light btn-small" %> | <%= link_to 'Editer', edit_genre_path(genre), class: "btn waves-effect waves-light btn-small" %> | <%= link_to 'Suprimer', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red waves-effect waves-light btn-small"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Genre', new_genre_path, class: "btn yellow black-text waves-effect waves-light btn-small" %>
