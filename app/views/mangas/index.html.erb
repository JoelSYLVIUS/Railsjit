<h1 class="center">Mangas</h1>

<table>
  <thead>
    <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Affiche</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
              <td><%= manga.title %></td>
              <td><%= manga.description %></td>
              <td><p><%= image_tag manga.image_url (:thumb) %></p></td>
        <td><%= link_to 'Afficher', manga, class: "btn blue waves-effect waves-light btn-small" %> | <%= link_to 'Editer', edit_manga_path(manga), class: "btn waves-effect waves-light btn-small" %> |
                 <%= link_to 'Supprimer',
                 manga,
                 :method => :delete,
                 :confirm => 'Etes-vous sÃ»r de vouloir supprimer ce manga ?',
                 class: "btn red waves-effect waves-light btn-small" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Manga', new_manga_path, class: "btn yellow black-text waves-effect waves-light btn-small" %>
