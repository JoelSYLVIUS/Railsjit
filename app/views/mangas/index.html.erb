<h1 class="center">Mangas</h1>

<table class="table striped centered responsive-table">
  <thead>
    <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Affiche</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
              <td><h5><strong><%= manga.title %></strong></h5></td>
              <td class="truncate" style="max-width:200px;margin-top: 40px;"><%= manga.description %></td>
              <td><p><%= image_tag manga.image_url (:thumb) %></p></td>
        <td><%= link_to 'Afficher', manga, class: "btn blue waves-effect waves-light btn-small hoverable" %> | <%= link_to 'Modifier', edit_manga_path(manga), class: "btn waves-effect waves-light btn-small hoverable" %> |
                 <%= link_to 'Supprimer',
                 manga,
                 :method => :delete,
                 :confirm => 'Etes-vous sÃ»r de vouloir supprimer ce manga ?',
                 class: "btn red waves-effect waves-light btn-small hoverable" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un nouveau Manga', new_manga_path, class: "btn yellow black-text waves-effect waves-light btn-small hoverable" %>
