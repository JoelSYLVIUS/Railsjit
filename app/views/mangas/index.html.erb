  <thead>
    <tr>
            <th>Titre</th>
            <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
              <td><%= manga.title %></td>
              <td><%= manga.description %></td>
        <td><%= link_to 'Afficher', manga, class: "btn blue waves-effect waves-light btn-small" %> | <%= link_to 'Editer', edit_manga_path(manga), class: "btn waves-effect waves-light btn-small" %> | <%= link_to 'Supprimer', manga, method: :delete, data: { confirm: 'Etes-vous sÃ»r de vouloir supprimer ce manga ?' }, class: "btn red waves-effect waves-light btn-small" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

